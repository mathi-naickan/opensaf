### END INIT INFO

# Source LSB functions library
. /lib/lsb/init-functions

start() {
	logger "FMD: Start script. Ignore!!!!"
	return 0
}

stop() {
	logger "FMD: Kill Script called."
	#tipc-config -lt=1.1.47:eth1-1.1.31:eth0/500
	
	pkill osafamfd
	pkill osafamfnd
	pkill osaffmd

	x=`tipc-config -b | grep eth`
	tipc-config -bd=$x
	
	return 0
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  *)
	logger "FMD: Default case. Ignore!!!!!"
	return 2
esac
